@using TwitterSentimentService;
@{
    ViewBag.Title = "Retrieve Cases for User";
}

<style>
    table, td, th {
        border: 1px solid black;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/site.css" />

</head>
<body>
    <p class="note">
        <i class="fa fa-lightbulb-o" style="font-size:28px;color:yellow"></i>
        Note: Make Sure to Submit the Right Information.
    </p>
    <form name="retrieve" action="Verify_retrievecases_user" method="post" autocomplete="off">
        <div class="input-group">

            <input type="number" min="0" name="user_id" placeholder="User ID" required="">
        </div>
        <button class="btn btn-danger-case btn-block" name="submit" type="submit">Retrieve Cases by User ID</button>

    </form>
    @{
        if (ViewBag.check == false)
        {
            <br />
        }
        else
        {
            if (ViewBag.cases.Count == 0)
            {
                <br /><div class="w3-panel w3-pale-yellow w3-border">
                    <h3>Warning!</h3>
                    <p>No user found with this id OR The user didn't participate with any case yet!!! Please Try Again.</p>
                    <br />
                </div>
            }

            else
            {
                <br />
                <table>
                    <tr style="background-color: gainsboro;">
                        <th>Case ID</th>
                        <th>Case text</th>
                        <th>Date of Launch</th>
                    </tr>

                    @{ foreach (Cases cases in ViewBag.cases)
                        {
                            <tr>
                                <th>@cases.case_id</th>
                                <th>@cases.text</th>
                                <th>@cases.dol</th>
                            </tr>
                        }
                    }

                </table>
            }
        }
    }

</body>
</html>
